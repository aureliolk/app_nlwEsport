model Ads {
  id           String   @id @default(uuid())
  yearsPlaying String
  nickName     String
  idDiscord    String
  startPlay    String
  endPlay      String
  chatVoice    String
  daysPlaying  String
  CreatedDate  DateTime @default(now())
  ModifiedDate DateTime @default(now()) @updatedAt

  adsGames Games?  @relation(fields: [gamesId], references: [id])
  gamesId  String?
}

model Games {
  id           String   @id @default(uuid())
  nameGame     String
  imgUrl       String
  CreatedDate  DateTime @default(now())
  ModifiedDate DateTime @default(now()) @updatedAt

  Ads Ads[]
}
